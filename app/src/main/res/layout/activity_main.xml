<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_a_text" />

        <TextView
            android:id="@+id/score_teamA_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_initialized" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addSixPointsTeamA"
            android:text="@string/add_six_points" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addThreePointsTeamA"
            android:text="@string/add_three_points" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addTwoPointsTeamA"
            android:text="@string/add_two_points" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addExtraPointTeamA"
            android:text="@string/extra_point" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_b_text" />

        <TextView
            android:id="@+id/score_teamB_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score_initialized" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addSixPointsTeamB"
            android:text="@string/add_six_points" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addThreePointsTeamB"
            android:text="@string/add_three_points" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addTwoPointsTeamB"
            android:text="@string/add_two_points" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addExtraPointTeamB"
            android:text="@string/extra_point" />

    </LinearLayout>
</LinearLayout>